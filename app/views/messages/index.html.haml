.chat
  .chat-side
    .chat-user.clearfix
      %p= current_user.name
      .chat-user__actions
        %a.chat-user__action{ href: edit_user_registration_path }
          %i.fa.fa-cog

  .chat-main
    .chat-header.clearfix
      .chat-header--left
        %h2 チャットグループ名
        %p.chat-header__users
          Members: メンバー

    .chat-body
      %ul.chat-messages
        - @messages.each do |message|
          %li.chat-message
            .chat-message__header.clearfix
              %p.chat-message__name
                = message.user.name
              %p.chat-message__time
                = message.created_at
              %p.chat-message__body
                = message.body

    .chat-footer
      = form_for @message do |f|
        .chat-footer__body
          = f.text_area :body, row: 1, placeholder: 'type a message'
          %label.chat-footer__file
            = f.file_field :image
        = f.submit 'Send'
